<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_umber</item>
        <item name="colorPrimaryVariant">@color/silver_grey</item>
        <item name="colorOnPrimary">@color/forest_wolf_first</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_greenish_white</item>
        <item name="colorSecondaryVariant">@color/forest_wolf_first</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/light_greenish_white</item>
        <item name="android:windowBackground">@color/light_greenish_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyNotes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.Design.AppBarLayout">
        <item name="fontFamily">@font/nevrada_neue</item>
        <item name="android:textColor">@color/grey_umber</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Header">
        <item name="fontFamily">@font/nevrada_neue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_umber</item>
    </style>

    <style name="CardStyle" parent="CardView.Light">
        <item name="android:background">@color/forest_wolf_first</item>
        <item name="android:fontFamily">@font/sfprodisplay_thin</item>
    </style>

    <style name="CardText">
        <item name="android:fontFamily">@font/sfprodisplay_thin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_umber</item>
    </style>

    <style name="CardDate">
        <item name="android:fontFamily">@font/sfprodisplay_thin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#B5302A27</item>
    </style>
    <style name="_FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/silver_grey</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="Theme.MyNotes.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyNotes.NoActionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyNotes.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>